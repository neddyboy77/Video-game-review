  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Docker Node.js",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/usr/src/app",
      "trace": true,
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/backend/node_modules/**/*.js"
      ]
    }
  ]
}
